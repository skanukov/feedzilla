<div class="container container-content">
  <div class="row">
    <div class="col-xs-12">
      <h1>Ленты</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Название</th>
            <th>Адрес</th>
            <th>Описание</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @feeds.each do |feed| %>
            <tr>
              <td><%= feed.title %></td>
              <td><%= feed.link %></td>
              <td><%= feed.description %></td>
              <td><%= link_to 'Показать', admin_feed_path(feed) %></td>
              <td><%= link_to 'Редактировать', edit_admin_feed_path(feed) %></td>
              <td><%= link_to 'Удалить', admin_feed_path(feed), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'Новая Лента', new_admin_feed_path %>
    </div>
  </div>
</div>
